{
  "name": "playwright-state-model",
  "version": "1.1.3",
  "description": "Model-Based Testing driver connecting XState with Playwright Page Objects",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "agents",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "playwright-state-model": "dist/cli/init-agents.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "format": "prettier --write \"**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,json,md}\" --ignore-path .prettierignore",
    "prepublishOnly": "npm run build"
  },
  "author": "gustavo-meilus",
  "homepage": "https://github.com/gustavo-meilus/playwright-state-model#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gustavo-meilus/playwright-state-model.git"
  },
  "keywords": [
    "playwright",
    "xstate",
    "state-machine",
    "model-based-testing",
    "page-object-model",
    "test-automation",
    "e2e-testing"
  ],
  "license": "MIT",
  "peerDependencies": {
    "@playwright/test": "^1.30.0",
    "xstate": "^4.30.0 || ^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^24.10.1",
    "prettier": "3.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "xstate": "^5.24.0"
  }
}